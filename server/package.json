{
    "name": "bliss",
    "version": "0.0.1",
    "main": "server.ts",
    "type": "module",
    "scripts": {
        "dev": "tsx --watch src/index.ts",
        "start": "node dist/index.js",
        "build": "tsc -p tsconfig.build.json",
        "test": "vitest",
        "test:run": "vitest --run",
        "test:ui": "vitest --ui",
        "coverage": "vitest run --coverage",
        "type-check": "tsc --noEmit",
        "lint": "eslint .",
        "lint:fix": "eslint --fix .",
        "format": "prettier --write .",
        "format:check": "prettier --check .",
        "prepare": "husky",
        "seed": "tsx src/seeds/seed.ts"
    },
    "lint-staged": {
        "*.{js,jsx,ts,tsx}": [
            "eslint",
            "prettier --check"
        ],
        "*.{json,yml,yaml,md}": [
            "prettier --check"
        ]
    },
    "imports": {
        "#*": "./src/*"
    },
    "author": "",
    "license": "ISC",
    "description": "",
    "dependencies": {
        "bcrypt-ts": "^7.0.0",
        "dotenv": "^16.5.0",
        "express": "^5.1.0",
        "mongoose": "^8.14.2",
        "nodemailer": "^7.0.3",
        "zod": "^3.24.4"
    },
    "devDependencies": {
        "@eslint/js": "^9.26.0",
        "@tsconfig/node22": "^22.0.1",
        "@types/express": "^5.0.1",
        "@types/node": "^22.15.17",
        "@types/nodemailer": "^6.4.17",
        "@vitest/coverage-v8": "^3.1.3",
        "@vitest/eslint-plugin": "^1.1.44",
        "eslint": "^9.26.0",
        "eslint-plugin-perfectionist": "^4.12.3",
        "husky": "^9.1.7",
        "lint-staged": "^15.5.2",
        "prettier": "^3.5.3",
        "typescript": "^5.8.3",
        "typescript-eslint": "^8.32.0",
        "vitest": "^3.1.3"
    }
}
